# Maintainer: ugjka <ugis.germanis@gmail.com>

_pkgname=kwin-effect-grayscale
pkgname="$_pkgname-git"
pkgver=20180721.3e1ba20
pkgrel=1
pkgdesc='Turn things in grayscale'
arch=('x86_64')
url="https://github.com/ugjka/${_pkgname}"
license=('GPL')
depends=(kwin)
makedepends=('extra-cmake-modules' 'git')
source=("$_pkgname"::"git+http://github.com/ugjka/${_pkgname}.git")
md5sums=('SKIP')

pkgver() {
    cd $_pkgname
    echo "$(git log -1 --format="%cd" --date=short | tr -d '-').$(git log -1 --format="%h")"
}

prepare() {
    cd $_pkgname
    mkdir -p build
}

build(){
    cd $_pkgname
    cd build
    cmake .. \
        -DCMAKE_C_FLAGS:STRING="" \
        -DCMAKE_CXX_FLAGS:STRING="" \
        -DCMAKE_EXE_LINKER_FLAGS:STRING="" \
        -DCMAKE_SHARED_LINKER_FLAGS:STRING="" \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib
    make
}

package(){
    cd $_pkgname
    cd build
    make DESTDIR="$pkgdir" install
}